<div class="column is-half">
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
				<img src="https://bulma.io/images/placeholders/64x64.png" alt="profile picture">
			</p>
		</figure>
		<div class="media-content">
			<%= render 'yeets/form' %>
		</div>
	</article>
</div>

<% @yeets.each do | yeet | %>
	<div class="box">
		<article class="media">
			<div class="media-left">
				<figure class="image is-64x64">
					<img src="https://www.biography.com/.image/t_share/MTE1ODA0OTcxNzE5NjI0MjA1/karl-marx-9401219-1-402.jpg" alt="profile picture">
				</figure>
			</div>
			<div class="media-content">
				<div class="content">
					<strong>Karl Marx</strong><br/>
					<small>@K4RL_m@rx</small><br/>
					<p><%= yeet.yeet %></p>
				</div>
				<nav class="level">
					<div class="level-left is-mobile">
						<%= link_to yeet, class: "level-item" do%>
							<span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
						<% end %>
						<%= link_to edit_yeet_path(yeet), class: "level-item" do%>
							<span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
						<% end %>
						<%= link_to yeet, method: :delete, data: {confirm: "Are you want to un-yeet this yeet forever?"} do%>
							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
						<% end %>
					</div>
				</nav>
			</div>
		</article>
	</div>

<% end %>